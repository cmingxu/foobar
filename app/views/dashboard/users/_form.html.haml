.panel.panel-default
  .panel-heading 基本信息
  .panel-body
    = simple_form_for [:dashboard, @user], html: { multipart: true }  do |f|
      = f.input :mobile, label: "电话号码", readonly: true
      = f.input :password, as: :password, label: "密码"
      = f.submit f.object.persisted? ? "修改" : "增加", class: 'btn btn-primary btn-default'

.panel.panel-default
  .panel-heading 地区信息
  .panel-body
    = simple_form_for [:dashboard, @user], html: { multipart: true }  do |f|
      .city-group
        %select.city-select
          %option --省份--
          = options_for_select(ChinaCity.list)
        %select.city-select
          %option --城市--
        %select.city-select
          %option --地区--

      = f.submit f.object.persisted? ? "修改" : "增加", class: 'btn btn-primary btn-default'


